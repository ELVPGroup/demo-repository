{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* 生成构建产物 */
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",

    /* 路径映射（tsc-alias 需要） */
    "baseUrl": "./src",
    "paths": {
      "@evlp/shared/*": ["./*"]
    },

    /* 其他推荐配置 */
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
